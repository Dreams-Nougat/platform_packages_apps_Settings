<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/info_layout" >

    <LinearLayout style="@style/entry_layout">
        <TextView android:text="@string/EngineeringMode_CaseTitle" style="@style/info_label" />
        <TextView android:id="@+id/CaseTitle" style="@style/info_value" />
    </LinearLayout>

    <!-- Elapsed time  -->
    <LinearLayout style="@style/entry_layout">
        <TextView android:text="@string/EngineeringMode_elapsedTime" style="@style/info_label" />
        <TextView android:id="@+id/elapsedTime" style="@style/info_value" />
    </LinearLayout>

    <!-- SIM1 Phone Information -->
    <LinearLayout style="@style/entry_layout">
        <TextView android:text="@string/EngineeringMode_SIM1_Phone_Info" style="@style/info_label" />
        <TextView android:id="@+id/phone1Title" style="@style/info_value" />
    </LinearLayout>

    <LinearLayout style="@style/entry_layout">
        <TextView style="@style/info_label" />
        <TextView android:id="@+id/phone1info" style="@style/info_value" />
    </LinearLayout>

    <!-- SIM2 Phone Information -->
    <LinearLayout style="@style/entry_layout">
        <TextView android:text="@string/EngineeringMode_SIM2_Phone_Info" style="@style/info_label" />
        <TextView android:id="@+id/phone2Title" style="@style/info_value" />
    </LinearLayout>

    <LinearLayout style="@style/entry_layout">
        <TextView style="@style/info_label" />
        <TextView android:id="@+id/phone2info" style="@style/info_value" />
    </LinearLayout>
</LinearLayout>
</ScrollView>

